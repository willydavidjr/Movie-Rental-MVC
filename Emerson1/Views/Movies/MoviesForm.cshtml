@model Emerson1.ViewModels.MovieFormViewModel
@{
    ViewBag.Title = (string)ViewBag.Title;
}

<h2>@ViewBag.Title</h2>

@using (Html.BeginForm("Save", "Movies", FormMethod.Post))
{
    <div class="form-group">
        @Html.LabelFor(x => x.Name)
        @Html.TextBoxFor(x => x.Name, new { @class = "form-control" })
        @Html.ValidationMessageFor(x=>x.Name)
    </div>
    <div class="form-group">
        @Html.LabelFor(x => x.ReleaseDate)
        @Html.TextBoxFor(x => x.ReleaseDate, new { @class = "form-control" })
        @Html.ValidationMessageFor(x=>x.ReleaseDate)
    </div>
    <div class="form-group">
        @Html.LabelFor(x => x.GenreId)
        @Html.DropDownListFor(x=>x.GenreId, new SelectList(Model.Genres, "Id", "Name"), "Please select Genre",
       new { @class = "form-control" })
        @Html.ValidationMessageFor(x=>x.GenreId)
    </div>
    <div class="form-group">
        @Html.LabelFor(x => x.NumberOfStocks)
        @Html.TextBoxFor(x => x.NumberOfStocks, new { @class = "form-control" })
        @Html.ValidationMessageFor(x=>x.NumberOfStocks)
    </div>
    @Html.HiddenFor(x=>x.Id)
    @Html.AntiForgeryToken()
    <button type="submit" class="btn btn-primary">Save</button>
}

@section scripts
{
    @Scripts.Render("~/bundles/jqueryval")
}