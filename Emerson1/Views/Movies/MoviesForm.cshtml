@model Emerson1.ViewModels.NewMoviesViewModel
@{
    ViewBag.Title = "New Movie";
}

<h2>CustomerForm</h2>

@using (Html.BeginForm("Save", "Movies", FormMethod.Post))
{
    <div class="form-group">
        @Html.LabelFor(x => x.Movie.Name)
        @Html.TextBoxFor(x => x.Movie.Name, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(x => x.Movie.ReleaseDate)
        @Html.TextBoxFor(x => x.Movie.ReleaseDate, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(x => x.Movie.GenreId)
        @Html.DropDownListFor(x=>x.Movie.GenreId, new SelectList(Model.Genres, "Id", "Name"), "Please select Genre",
       new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(x => x.Movie.NumberOfStocks)
        @Html.TextBoxFor(x => x.Movie.NumberOfStocks, new { @class = "form-control" })
    </div>
    <button type="submit" class="btn btn-primary">Save</button>
}