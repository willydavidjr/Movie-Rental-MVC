@model Emerson1.ViewModels.CustomerFormViewModel
@{
    ViewBag.Title = "New";
}

<h2>New Customer</h2>

@using (Html.BeginForm("Save", "Customer", FormMethod.Post))
{
    <div class="form-group">
        @Html.LabelFor(x => x.Customer.Name)
        @Html.TextBoxFor(x => x.Customer.Name, new { @class = "form-control" })
        @Html.ValidationMessageFor(x=>x.Customer.Name)
    </div>

    <div class="form-group">
        @Html.LabelFor(x => x.Customer.BirthDate)
        @Html.TextBoxFor(x => x.Customer.BirthDate, new { @class = "form-control" })
        @Html.ValidationMessageFor(x=>x.Customer.BirthDate)
    </div>

    <div class="checkbox">
        <label>
            @Html.CheckBoxFor(x=>x.Customer.IsSubscribeToNewsletter) Subscribe to Newsletter
        </label>
    </div>

    <div class="form-group">
        @Html.LabelFor(x=>x.Customer.MembershipTypeId)
        @Html.DropDownListFor(x=>x.Customer.MembershipTypeId, new SelectList(Model.MembershipTypes, "Id", "Name"), 
       "Select Membership Types", new { @class = "form-control" })
        @Html.ValidationMessageFor(x=>x.Customer.MembershipTypeId)
    </div>
    @Html.HiddenFor(x=>x.Customer.Id)
    @Html.AntiForgeryToken()
    <button type="submit" class="btn btn-primary">Save</button>
}

@section scripts
{
    @Scripts.Render("~/bundles/jqueryval")  
}
